<div class="container m-4">
  <div class="row">
    <div class="col-lg-6">
      <div class="login-container">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
        <%= f.label :phone, class: "login-label-text" %><br />
        <%= f.text_field :phone, autofocus: true, class: "form-control" %>
        </div>

          <div class="field">
            <%= f.label :password, class: "login-label-text" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "login-checkbox" %>
              <%= f.label :remember_me, class: "login-checkbox-text" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary mt-2 mb-2"  %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>  
</div>

