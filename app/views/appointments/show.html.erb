<div class="container m-4">
  <% if @appointment.status == 'open' %>
    <%= form_with(model: @appointment, url: close_appointment_path(@appointment), method: :patch) do |form| %>
      <div class="field">
        <%= form.label :recommendations %>
        <%= form.text_area :recommendations %>
      </div>
      
      <div class="actions">
        <%= form.submit 'Close Appointment' %>
      </div>
    <% end %>
  <% else %>
    <h4>Recommendations:</h4>
    <div class="card col-lg-6">
      <div class="card-body">
        <%= @appointment.recommendations %>        
      </div>
    </div>
  <% end %>
</div>