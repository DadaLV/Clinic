<!DOCTYPE html>
<html>
  <head>
    <title>Clinic</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%# <%= javascript_pack_tag 'flash_messages', 'data-turbo-track': 'reload' %> 
    
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key.to_s == 'notice' ? 'success' : 'danger' %>">
          <%= value %>
        </div>
      <% end %>
      
    <%= yield %>
  </body>
</html>
